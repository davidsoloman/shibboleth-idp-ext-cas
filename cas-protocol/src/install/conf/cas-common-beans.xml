<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-init-method="initialize">

    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer"
          p:placeholderPrefix="%{"
          p:placeholderSuffix="}" />

    <bean id="cas.ticketService" class="net.shibboleth.idp.cas.ticket.SimpleTicketService"
          p:storageService-ref="shibboleth.StorageService"
          p:serviceTicketIdGenerator-ref="cas.serviceTicketIdGenerator"
          p:proxyTicketIdGenerator-ref="cas.proxyTicketIdGenerator"
          p:serviceTicketValidityPeriod="%{cas.st.validityPeriod:PT20S}"
          p:proxyGrantingTicketValidityPeriod="%{cas.pgt.validityPeriod:PT8H}"
          p:proxyTicketValidityPeriod="%{cas.pt.validityPeriod:PT20S}" />

    <bean id="cas.serviceTicketIdGenerator"
          class="net.shibboleth.idp.cas.ticket.CasProtocolTicketIdGenerator"
          p:prefix="ST"
          p:length="%{cas.st.length:25}" />

    <bean id="cas.proxyGrantingTicketIdGenerator"
          class="net.shibboleth.idp.cas.ticket.CasProtocolTicketIdGenerator"
          p:prefix="PGT"
          p:length="%{cas.pgt.length:50}" />

    <bean id="cas.proxyGrantingTicketIOUGenerator"
          class="net.shibboleth.idp.cas.ticket.CasProtocolTicketIdGenerator"
          p:prefix="PGTIOU"
          p:length="%{cas.pgtiou.length:50}" />

    <bean id="cas.proxyTicketIdGenerator"
          class="net.shibboleth.idp.cas.ticket.CasProtocolTicketIdGenerator"
          p:prefix="PT"
          p:length="%{cas.pt.length:25}" />

    <!-- Adapt ProfileAction beans to Webflow Actions. -->
    <bean class="net.shibboleth.idp.profile.impl.ProfileActionBeanPostProcessor" />

    <bean id="initProfileRequestContext"
          class="net.shibboleth.idp.profile.impl.InitializeProfileRequestContext" />

</beans>