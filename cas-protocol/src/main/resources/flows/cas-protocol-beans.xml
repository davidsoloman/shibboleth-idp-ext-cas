<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util.xsd"
       default-init-method="initialize">

    <context:property-placeholder
            location="${idp.properties.path}"
            ignore-unresolvable="false"
            ignore-resource-not-found="false" />

    <!-- Adapt ProfileAction beans to Webflow Actions. -->
    <bean class="net.shibboleth.idp.profile.impl.ProfileActionBeanPostProcessor" />

    <bean id="cas.serviceTicketIdGenerator"
          class="net.shibboleth.idp.cas.ticket.CasProtocolTicketIdGenerator"
          p:prefix="ST"
          p:length="${cas.st.length}" />

    <bean id="cas.proxyGrantingTicketIdGenerator"
          class="net.shibboleth.idp.cas.ticket.CasProtocolTicketIdGenerator"
          p:prefix="PGT"
          p:length="${cas.pgt.length}" />

    <bean id="cas.proxyGrantingTicketIOUGenerator"
          class="net.shibboleth.idp.cas.ticket.CasProtocolTicketIdGenerator"
          p:prefix="PGTIOU"
          p:length="${cas.pgtiou.length}" />

    <bean id="cas.proxyTicketIdGenerator"
          class="net.shibboleth.idp.cas.ticket.CasProtocolTicketIdGenerator"
          p:prefix="PT"
          p:length="${cas.pt.length}" />

    <bean id="cas.ticketService" class="net.shibboleth.idp.cas.ticket.SimpleTicketService"
          p:storageService-ref="shibboleth.StorageService"
          p:serviceTicketIdGenerator-ref="cas.serviceTicketIdGenerator"
          p:proxyTicketIdGenerator-ref="cas.proxyTicketIdGenerator"
          p:serviceTicketValidityPeriod="${cas.st.validityPeriod}"
          p:proxyGrantingTicketValidityPeriod="${cas.pgt.validityPeriod}"
          p:proxyTicketValidityPeriod="${cas.pt.validityPeriod}" />

    <bean id="cas.proxyAuthenticator" class="net.shibboleth.idp.cas.authn.PkixProxyAuthenticator"
          c:pgtIdGenerator-ref="cas.proxyGrantingTicketIdGenerator"
          c:pgtIouGenerator-ref="cas.proxyGrantingTicketIOUGenerator"
          c:trustStore-ref="cas.proxyCallbackTrustStore"
          c:hostnameVerifier-ref="cas.proxyHostnameVerifier" />

    <util:constant id="cas.proxyHostnameVerifier" static-field="${cas.proxy.hostnameVerifier}" />

    <!-- Action beans -->
    <bean id="initProfileRequestContext"
          class="net.shibboleth.idp.profile.impl.InitializeProfileRequestContext" />

    <bean id="dispatchProtocolAction"
          class="net.shibboleth.idp.cas.flow.DispatchProtocolAction" />

    <bean id="initializeLoginAction"
          class="net.shibboleth.idp.cas.flow.InitializeLoginAction" />

    <bean id="checkAuthenticationRequiredAction"
          class="net.shibboleth.idp.cas.flow.CheckAuthenticationRequiredAction" />

    <bean id="buildAuthenticationContextAction"
          class="net.shibboleth.idp.cas.flow.BuildAuthenticationContextAction" />

    <bean id="grantServiceTicketAction"
          class="net.shibboleth.idp.cas.flow.GrantServiceTicketAction"
          p:ticketService-ref="cas.ticketService" />

    <bean id="initializeValidateAction"
          class="net.shibboleth.idp.cas.flow.InitializeValidateAction" />

    <bean id="validateServiceTicketAction"
          class="net.shibboleth.idp.cas.flow.ValidateServiceTicketAction"
          p:ticketService-ref="cas.ticketService"
          p:sessionResolver-ref="shibboleth.SessionManager"
          p:proxyAuthenticator-ref="cas.proxyAuthenticator" />

</beans>