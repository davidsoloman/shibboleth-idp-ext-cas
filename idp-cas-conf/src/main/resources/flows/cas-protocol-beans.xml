<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-init-method="initialize">

  <!-- Adapt ProfileAction beans to Webflow Actions. -->
  <bean class="net.shibboleth.idp.profile.impl.ProfileActionBeanPostProcessor" />

  <bean id="cas.ticketIdGenerator"
        class="net.shibboleth.idp.cas.ticket.CasProtocolTicketIdGenerator" />

  <bean id="cas.ticketService" class="net.shibboleth.idp.cas.ticket.SimpleTicketService"
        p:storageService-ref="shibboleth.StorageService"
        p:ticketIdGenerator-ref="cas.ticketIdGenerator"
        p:ticketValidityPeriod="PT10S"/>

  <!-- Action beans -->
  <bean id="initProfileRequestContext"
        class="net.shibboleth.idp.profile.impl.InitializeProfileRequestContext" />

  <bean id="checkAuthenticationRequiredAction"
        class="net.shibboleth.idp.cas.flow.CheckAuthenticationRequiredAction" />

  <bean id="grantServiceTicketAction"
        class="net.shibboleth.idp.cas.flow.GrantServiceTicketAction"
        p:ticketService-ref="cas.ticketService" />

</beans>