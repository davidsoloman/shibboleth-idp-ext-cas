<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-init-method="initialize">

  <import resource="common-beans.xml" />

  <bean id="initProfileRequestContext"
        class="net.shibboleth.idp.profile.impl.InitializeProfileRequestContext" />

  <bean id="casServiceAccessMessageDecoderFactory"
        class="net.shibboleth.idp.cas.CasServiceAccessMessageDecoderFactory" />

  <bean id="casTicketIdGenerator"
        class="net.shibboleth.idp.cas.ticket.CasProtocolTicketIdGenerator" />

  <bean id="casProtocolTicketFactory"
        class="net.shibboleth.idp.cas.ticket.TicketFactory"
        p:ticketIdGenerator-ref="casTicketIdGenerator"
        p:ticketValidityPeriod="PT10S"/>

  <bean id="redirectUrlBuilder"
        class="net.shibboleth.idp.cas.RedirectUrlBuilder" />

  <!-- Action beans -->

  <bean id="decodeMessage" class="net.shibboleth.idp.profile.impl.DecodeMessage">
    <constructor-arg ref="casServiceAccessMessageDecoderFactory" />
  </bean>

  <bean id="checkAuthenticationRequired"
        class="net.shibboleth.idp.cas.flow.CheckAuthenticationRequiredAction" />

  <bean id="generateTicket"
        class="net.shibboleth.idp.cas.flow.GenerateTicketAction"
        p:ticketFactory-ref="casProtocolTicketFactory"
        p:ticketStore-ref="ticketStore" />

</beans>