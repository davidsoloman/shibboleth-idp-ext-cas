<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

  <on-start>
    <evaluate expression="InitializeProfileRequestContext"/>
  </on-start>

  <action-state id="decodeMessage">
    <evaluate expression="decodeMessage" />
    <transition on="proceed" to="extractMessage"/>
    <transition on="UnableToDecode" to="error"/>
  </action-state>

  <action-state id="extractMessage">
    <evaluate expression="conversationScope['net.shibboleth.idp.profile.ProfileRequestContext'].incomingMessageContext.message"
              result="flowScope.casServiceAccessMessage" />
    <transition to="checkMessageForTicket" />
  </action-state>

  <decision-state id="checkMessageForTicket">
    <if test="flowScope.casServiceAccessMessage.ticket != null"
        then="redirectToService"
        else="checkAuthenticationRequired" />
  </decision-state>

  <action-state id="checkAuthenticationRequired">
    <evaluate expression="checkAuthenticationRequiredAction"/>
    <transition on="sessionNotFound" to="authenticate" />
    <transition on="renewRequested" to="authenticate" />
    <transition on="sessionFound" to="generateTicket" />
  </action-state>

  <subflow-state id="authenticate" subflow="authn-flow">
    <transition on="success" to="generateTicket" />
  </subflow-state>

  <action-state id="generateTicket">
    <evaluate expression="generateTicketAction" />
    <transition on="ticketCreated" to="constructRedirectUrl" />
    <transition on="ticketCreationFailed" to="error" />
  </action-state>

  <action-state id="constructRedirectUrl">
    <evaluate expression="redirectUrlBuilder.buildUrl(flowScope.messageContext.message)"
              result="flowScope.redirectUrl" />
    <transition to="redirectToService" />
  </action-state>

  <end-state id="redirectToService" view="externalRedirect:${flowScope.redirectUrl}" />

  <end-state id="error" view="profileErrorView" />

  <bean-import resource="service-access-beans.xml" />

</flow>