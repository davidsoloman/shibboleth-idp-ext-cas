<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="net.shibboleth.idp.profile.impl.ProfileActionBeanPostProcessor" />

    <bean id="extractUsernamePasswordFromFormRequestAction"
          class="net.shibboleth.idp.authn.impl.ExtractUsernamePasswordFromFormRequest"
          scope="prototype"
          p:httpServletRequest-ref="shibboleth.HttpServletRequest"/>

    <bean id="demoAuthentication"
          class="net.shibboleth.idp.cas.demo.authn.DemoAuthenticationAction"
          scope="prototype" />
</beans>