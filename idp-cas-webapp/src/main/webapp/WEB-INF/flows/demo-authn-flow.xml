<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <view-state id="showLoginForm" view="login">
        <transition on="proceed" to="extractUsernamePasswordFromFormRequest" />
    </view-state>

    <action-state id="extractUsernamePasswordFromFormRequest">
        <evaluate expression="extractUsernamePasswordFromFormRequestAction" />
        <transition on="proceed" to="authenticate" />
        <transition on="NoCredentials" to="handleNoCredentials" />
    </action-state>

    <action-state id="authenticate">
        <evaluate expression="demoAuthentication" />
        <transition on="proceed" to="CallSubjectCanonicalization" />
        <transition on="NoCredentials" to="handleNoCredentials" />
        <transition on="InvalidCredentials" to="handleInvalidCredentials" />
    </action-state>

    <action-state id="handleNoCredentials">
        <set name="flashScope.validationError" value="resourceBundle.noCredentials" />
        <transition to="showLoginForm" />
    </action-state>

    <action-state id="handleInvalidCredentials">
        <set name="flashScope.validationError" value="resourceBundle.invalidCredentials" />
        <transition to="showLoginForm" />
    </action-state>

    <subflow-state id="CallSubjectCanonicalization" subflow="SubjectC14N/Simple"/>

    <!-- Error events to reflect back from this subflow. -->
    <end-state id="proceed" />
    <end-state id="IdentitySwitch" />
    <end-state id="InputOutputError" />
    <end-state id="InvalidCredentials" />
    <end-state id="InvalidProfileContext" />
    <end-state id="NoCredentials" />
    <end-state id="NoPotentialFlow" />
    <end-state id="RequestUnsupported" />
    <end-state id="SubjectCanonicalizationError" />

    <!-- Default is to turn any event into its own end-state. -->
    <global-transitions>
        <transition on="#{true}" to="#{currentEvent.id}" />
    </global-transitions>

    <bean-import resource="demo-authn-beans.xml" />

</flow>